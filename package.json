{
  "name": "artifex-ui",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/artifex-ui.common.js",
  "scripts": {
    "build": "vue-cli-service build --target lib --name artifex-ui ./source/index.js",
    "test": "TZ=UTC node --expose-gc ./node_modules/.bin/jest",
    "test:watch": "npm t -- --watch",
    "storybook": "start-storybook -p 6006",
    "storybook:nocache": "npm run storybook -- --no-manager-cache",
    "build-storybook": "build-storybook"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "collectCoverageFrom": [
      "source/components/**/*.{js,vue}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "keywords": [],
  "author": "Peter Bedor",
  "license": "MIT",
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "vue/multi-word-component-names": 0
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.16.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-storysource": "^6.3.12",
    "@storybook/vue3": "^6.3.12",
    "@tailwindcss/forms": "^0.3.4",
    "@vue/cli-plugin-babel": "^5.0.0-alpha.5",
    "@vue/cli-plugin-eslint": "^5.0.0-alpha.5",
    "@vue/cli-plugin-unit-jest": "^5.0.0-alpha.5",
    "@vue/cli-service": "^5.0.0-beta.7",
    "@vue/compiler-sfc": "^3.2.11",
    "@vue/test-utils": "^2.0.0-rc.16",
    "autoprefixer": "^10.4.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.0",
    "babel-loader": "^8.2.3",
    "eslint-plugin-vue": "^8.0.3",
    "jest": "^26.0.0",
    "postcss": "^8.3.11",
    "tailwindcss": "^2.2.19",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-loader": "^16.8.2"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.2",
    "vue": "^3.2.20"
  }
}
